@model Guid

<div class="bg-white flex w-full h-20 border-b border-b-zinc-300">
    <div class="flex-1 flex items-center">
        <p class="mx-6 font-bold">Select Content Type</p>
    </div>
</div>

<div id="interfaceOptions" class="py-4 px-4">
    <div
        hx-post="/Workspaces/@Model/interfaces/mac/table/create-interface"
        hx-target="#workspace"
        hx-on::after-request="toggleEditor()"
        class="bg-white cursor-pointer rounded-xl shadow py-2 px-4 mb-4 border-3 border-white hover:underline hover:border-blueMid">
        <p class="font-medium mb-1">Table</p>
        <p class="text-xs font-medium text-grayMid mb-1">
            Create a table of objects, customize appearance and behavior.
        </p>
    </div>
    
    <div
        hx-post="/Workspaces/@Model/interfaces/mac/content/create-interface"
        hx-target="#workspace"
        hx-on::after-request="toggleEditor()"
        class="bg-white cursor-pointer rounded-xl shadow py-2 px-4 mb-4 border-3 border-white hover:underline hover:border-blueMid">
        <p class="font-medium mb-1">Content</p>
        <p class="text-xs font-medium text-grayMid mb-1">
            Create a view of content using text, images and videos.
        </p>
    </div>
    
    <div
        hx-post="/Workspaces/@Model/interfaces/mac/form/create-interface"
        hx-target="#workspace"
        hx-on::after-request="toggleEditor()"
        class="bg-white cursor-pointer rounded-xl shadow py-2 px-4 mb-4 border-3 border-white hover:underline hover:border-blueMid">
        <p class="font-medium mb-1">Form</p>
        <p class="text-xs font-semibold text-grayMid mb-1">
            Create a form to accept user input.
        </p>
    </div>
    
    <div
        hx-post="/Workspaces/@Model/interfaces/mac/source-list/create-interface"
        hx-target="#workspace"
        hx-on::after-request="toggleEditor()"
        class="bg-white cursor-pointer rounded-xl shadow py-2 px-4 mb-4 border-3 border-white hover:underline hover:border-blueMid">
        <p class="font-medium mb-1">Source List</p>
        <p class="text-xs font-semibold text-grayMid mb-1">
            Create a source list of objects.
        </p>
    </div>
    
    <div
        hx-post="/Workspaces/@Model/interfaces/mac/outline/create-interface"
        hx-target="#workspace"
        hx-on::after-request="toggleEditor()"
        class="bg-white cursor-pointer rounded-xl shadow py-2 px-4 mb-4 border-3 border-white hover:underline hover:border-blueMid">
        <p class="font-medium mb-1">Outline View</p>
        <p class="text-xs font-semibold text-grayMid mb-1">
            Create an outline view of objects.
        </p>
    </div>
</div>
    
<div class="absolute bottom-0 bg-white w-full h-16 border-t border-t-zinc-300 flex justify-between items-center px-6">
    <div class="flex items-center w-1/2"></div>
    <div class="flex items-center justify-end w-1/2 text-right">
        <button
            type="button"
            onclick="toggleEditor()"
            class="bg-zinc-300 text-zinc-700 font-semibold rounded px-4 py-2 cursor-pointer text-sm">
            Cancel
        </button>
    </div>
</div>