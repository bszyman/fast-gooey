@model FastGooey.Models.ViewModels.LinkEditor.LinkEditorViewModel
@{
    var appleNodes = Model?.AppleMobileNodes ?? [];
    var macNodes = Model?.MacNodes ?? [];
}

<div class="w-full p-2 bg-zinc-200"><h3 class="text-xs font-semibold uppercase">iOS</h3></div>
<div class="w-full grid grid-cols-4 gap-2 p-2">
    @if (appleNodes.Count == 0)
    {
        <p class="col-span-4 text-center text-zinc-500">No iOS content yet.</p>
    }
    else
    {
        foreach (var node in appleNodes)
        {
            <button type="button"
                    class="text-center rounded-md border border-transparent hover:bg-zinc-100 p-2 transition"
                    data-link-editor-item="true"
                    data-link-editor-id="@node.Id"
                    data-link-editor-label="@node.Name"
                    data-link-editor-platform="iOS">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-12 inline">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m2.25 0H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z" />
                </svg>
                <p class="text-sm font-semibold truncate">@node.Name</p>
                <p class="text-xs text-zinc-500">@node.ViewType</p>
            </button>
        }
    }
</div>
<div class="w-full p-2 bg-zinc-200"><h3 class="text-xs font-semibold uppercase">macOS</h3></div>
<div class="w-full grid grid-cols-4 gap-2 p-2">
    @if (macNodes.Count == 0)
    {
        <p class="col-span-4 text-center text-zinc-500">No macOS content yet.</p>
    }
    else
    {
        foreach (var node in macNodes)
        {
            <button type="button"
                    class="text-center rounded-md border border-transparent hover:bg-zinc-100 p-2 transition"
                    data-link-editor-item="true"
                    data-link-editor-id="@node.Id"
                    data-link-editor-label="@node.Name"
                    data-link-editor-platform="macOS">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-12 inline">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m2.25 0H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z" />
                </svg>
                <p class="text-sm font-semibold truncate">@node.Name</p>
                <p class="text-xs text-zinc-500">@node.ViewType</p>
            </button>
        }
    }
</div>
