@model FastGooey.Models.ViewModels.Media.MediaSourceListViewModel

<div class="absolute top-0 w-full my-2 text-blue-900">
    <span class="mx-3 uppercase text-sm font-semibold tracking-tight">Media Sources</span>
</div>

<div class="absolute top-10 bottom-8 overflow-y-scroll w-full">
    @if (!Model.Sources.Any())
    {
        <p class="mx-3 text-xs text-zinc-500">No sources configured yet.</p>
    }
    else
    {
        <ul id="interfaceList">
            @foreach (var source in Model.Sources)
            {
                <li hx-get="@Url.Action("Browse", "Media", new { workspaceId = Model.WorkspaceId, sourceId = source.SourceId })"
                    hx-target="#workspaceEditor"
                    hx-push-url="false"
                    class="py-2 text-blueDark font-medium overflow-ellipsis cursor-pointer w-full"
                    onclick="changeInterfaceListSelection(this)">
                    <div class="px-4 inline-block w-full">
                        <div class="flex items-center justify-between">
                            <p class="text-sm font-semibold">@source.Name</p>
                            <span class="text-[11px]">@source.SourceType</span>
                        </div>
                        @if (!string.IsNullOrWhiteSpace(source.DetailLine))
                        {
                            <p class="text-[11px] mt-1">@source.DetailLine</p>
                        }
                        @if (!string.IsNullOrWhiteSpace(source.StatusLine))
                        {
                            <p class="text-[11px] text-red-500 mt-1">@source.StatusLine</p>
                        }
                    </div>
                </li>
            }
        </ul>
    }
</div>

<div class="interfaceSelectorControlBar">
</div>
