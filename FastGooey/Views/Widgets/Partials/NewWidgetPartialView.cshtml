@model Guid

<div class="bg-white flex w-full h-20 border-b border-b-zinc-300">
    <div class="flex-1 flex items-center">
        <p class="mx-6 font-bold">Create New Widget</p>
    </div>
</div>

<div id="selectorPanel" class="py-4 px-4">
    <div
        hx-post="/Workspaces/@Model/Widgets/Clock/create-widget"
        hx-target="#workspace"
        data-widget-type="clock"
        hx-on::after-request="toggleEditor()"
        class="bg-white cursor-pointer rounded-xl shadow py-2 px-4 mb-4 border-3 border-white hover:underline hover:border-blueMid">
        <p class="font-medium mb-1">Clock</p>
        <p class="text-xs font-semibold text-grayMid mb-1">
            Create a clock widget that can be set to any timezone around the world.
        </p>
    </div>
    <div
        hx-post="/Workspaces/@Model/Widgets/Map/create-widget"
        hx-target="#workspace"
        data-widget-type="map"
        hx-on::after-request="toggleEditor()"
        class="bg-white cursor-pointer rounded-xl shadow py-2 px-4 mb-4 border-3 border-white hover:underline hover:border-blueMid">
        <p class="font-medium mb-1">Map</p>
        <p class="text-xs font-semibold text-grayMid mb-1">
            Create a map widget can display multiple pins of locations.
        </p>
    </div>
    <div
        hx-post="/Workspaces/@Model/Widgets/RssFeed/create-widget"
        hx-target="#workspace"
        data-widget-type="rss"
        hx-on::after-request="toggleEditor()"
        class="bg-white cursor-pointer rounded-xl shadow py-2 px-4 mb-4 border-3 border-white hover:underline hover:border-blueMid">
        <p class="font-medium mb-1">RSS Feed</p>
        <p class="text-xs font-semibold text-grayMid mb-1">
            Create a RSS widget that can display a feed from a remote website.
        </p>
    </div>
    <div
        hx-post="/Workspaces/@Model/Widgets/Weather/create-widget"
        hx-target="#workspace"
        data-widget-type="weather"
        hx-on::after-request="toggleEditor()"
        class="bg-white cursor-pointer rounded-xl shadow py-2 px-4 mb-4 border-3 border-white hover:underline hover:border-blueMid">
        <p class="font-medium mb-1">Weather</p>
        <p class="text-xs font-semibold text-grayMid mb-1">
            Create a weather widget that can be set to any location around the world.
        </p>
    </div>
</div>
    
<div class="absolute bottom-0 bg-white w-full h-16 border-t border-t-zinc-300 flex justify-between items-center px-6">
    <div class="flex items-center w-1/2"></div>
    <div class="flex items-center justify-end w-1/2 text-right">
        <button
            type="button"
            onclick="toggleEditor()"
            class="bg-zinc-300 text-zinc-700 font-semibold rounded px-4 py-2 cursor-pointer text-sm">
            Cancel
        </button>
    </div>
</div>