
<div class="flex flex-col h-full">
    <!-- Header - Fixed at top -->
    <div class="bg-white flex w-full h-20 border-b border-b-zinc-300 flex-shrink-0">
        <div class="flex-1 flex items-center">
            <p class="mx-6 font-bold">Edit Table Item</p>
        </div>
    </div>

    <!-- Content - Scrollable -->
    <div class="flex-1 overflow-y-auto py-4 px-4">
        <div class="formGroup mb-8">
            <div class="w-full border-b border-b-zinc-300 py-2 px-4">
                <p class="font-semibold text-sm">Content</p>
            </div>
            <div class="py-4 px-4">
                <div class="mb-4">
                    <label for="fieldName">Name</label>
                    <div class="flex gap-2">
                        <input type="text" id="fieldName" name="fieldName" class="w-full" value="Pensacola, FL" />
                    </div>
                </div>
                <div class="mb-4">
                    <label for="textString">Text String</label>
                    <div class="flex gap-2">
                        <input type="text" id="textString" name="textString" class="w-full" value="Pensacola, FL" />
                    </div>
                </div>
                <div class="mb-4">
                    <label for="longText">Long Text</label>
                    <div class="flex gap-2">
                        <textarea id="longText" name="longText" class="w-full h-48"></textarea>
                    </div>
                </div>
                <div class="mb-4">
                    <label for="integer">Integer</label>
                    <div class="flex gap-2">
                        <input type="number" id="integer" name="integer" class="w-full" value="" />
                    </div>
                </div>
                <div class="mb-4">
                    <label for="boolean">Boolean</label>
                    <div class="flex gap-2">
                        <select id="boolean" name="boolean" class="w-full">
                            <option value="true">True</option>
                            <option value="false">False</option>
                        </select>
                    </div>
                </div>
                <div class="mb-4">
                    <label for="date">Date</label>
                    <div class="flex gap-2">
                        <input type="date" id="date" name="date" class="w-full" value="" />
                    </div>
                </div>
                <div class="mb-4">
                    <label for="time">Time</label>
                    <div class="flex gap-2">
                        <input type="time" id="time" name="time" class="w-full" value="" />
                    </div>
                </div>
                <div class="mb-4">
                    <label for="dateTime">Date Time</label>
                    <div class="flex gap-2">
                        <input type="datetime-local" id="dateTime" name="dateTime" class="w-full" value="" />
                    </div>
                </div>
                <div class="mb-4">
                    <label for="url">Url</label>
                    <div class="flex gap-2">
                        <input type="url" id="url" name="url" placeholder="https://..." value="" />
                    </div>
                </div>
                <div class="mb-4">
                    <label for="email">Email</label>
                    <div class="flex gap-2">
                        <input type="email" id="email" name="email" placeholder="user@FastGooey.com" value="" />
                    </div>
                </div>
                <div class="mb-4">
                    <label for="phone">Phone</label>
                    <div class="flex gap-2">
                        <input type="tel" id="phone" name="phone" placeholder="(800) 867-5309" value="" />
                    </div>
                </div>
                <div class="mb-4">
                    <label for="dropdown">Dropdown</label>
                    <select id="dropdown" name="dropdown" class="w-full">
                        <option value="eFoil">eFoil</option>
                        <option value="Kiteboard">Kiteboard</option>
                        <option value="WingFoil">Wing Foil</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Footer - Fixed at bottom -->
    <div class="bg-white w-full h-16 border-t border-t-zinc-300 flex justify-between items-center px-6 flex-shrink-0">
        <div class="flex gap-2 items-center w-1/2"></div>
        <div class="flex gap-2 items-center justify-end w-1/2 text-right">
            <button type="button" onclick="toggleEditor()" class="bg-zinc-300 text-zinc-700 font-semibold rounded px-4 py-2 cursor-pointer text-sm">
                Cancel
            </button>
            <button
                hx-get="/Interfaces/MacOS/TableItemEditorPanel"
                hx-target="#editorPanel"
                type="button"
                onclick="toggleEditor()" 
                class="bg-emerald-700 text-white font-semibold rounded px-4 py-2 cursor-pointer text-sm">
                Save
            </button>
        </div>
    </div>
</div>