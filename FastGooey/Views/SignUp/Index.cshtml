@model FastGooey.Models.ViewModels.RegisterViewModel
@{ Layout = "PublicLayout"; }

<div class="w-screen h-screen bg-blueDark font-mont">
    <div class="p-6 flex items-center">
        <a href="/">
            <h1 class="text-nuclearGreen font-exo text-2xl font-bold italic tracking-tighter text-shadow-md flex-1">FastGooey</h1>
        </a>
    </div>
    <div class="max-w-2xl mx-auto pt-24">
        <h1 class="text-white font-exo text-5xl md:text-7xl font-bold italic tracking-tighter text-shadow-md mb-6">
            Sign-Up
        </h1>
        
        <p class="text-white mb-6">
            Creating an account is free. You'll automatically be given access to FastGooey and the ability
            to create a single free content node to get introduced to the system. Ready for production use.
        </p>
        
        <form asp-action="Index" asp-controller="SignUp" method="post">
            <div class="border border-white shadow-md rounded-xl text-white p-4 mb-6">
                <div class="formGroup">
                    <div class="mb-4">
                        <label asp-for="FirstName">First Name</label>
                        <input asp-for="FirstName" type="text" class="w-full"/>
                        <span asp-validation-for="FirstName" class="text-red-600 text-sm"></span>
                    </div>
                    <div class="mb-4">
                        <label asp-for="LastName">Last Name</label>
                        <input asp-for="LastName" type="text" class="w-full"/>
                        <span asp-validation-for="LastName" class="text-red-600 text-sm"></span>
                    </div>
                    <div class="mb-4">
                        <label asp-for="Email">Email Address</label>
                        <input asp-for="Email" type="email" class="w-full"/>
                        <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
                    </div>
                    <div class="mb-4">
                        <label asp-for="Password">Password</label>
                        <div class="flex gap-2">
                            <input asp-for="Password" type="password" class="w-full flex-1"/>
                            <button type="button" onclick="togglePassword()">
                                <svg id="eyeIcon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4 cursor-pointer">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178Z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                                </svg>
                                <svg id="eyeSlashIcon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4 cursor-pointer hidden">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M3.98 8.223A10.477 10.477 0 0 0 1.934 12C3.226 16.338 7.244 19.5 12 19.5c.993 0 1.953-.138 2.863-.395M6.228 6.228A10.451 10.451 0 0 1 12 4.5c4.756 0 8.773 3.162 10.065 7.498a10.522 10.522 0 0 1-4.293 5.774M6.228 6.228 3 3m3.228 3.228 3.65 3.65m7.894 7.894L21 21m-3.228-3.228-3.65-3.65m0 0a3 3 0 1 0-4.243-4.243m4.242 4.242L9.88 9.88" />
                                </svg>
                            </button>
                        </div>
                        <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
                    </div>
                </div>
                
                <div class="mx-4">
                    <partial name="~/Views/Partials/cloudflareTurnstileFormEmbed.cshtml" />
                </div>
                
                <button type="submit" class="text-sm font-semibold py-2 px-4 rounded-lg cursor-pointer bg-gradient-to-b from-nuclearGreenLighter to-nuclearGreenDarker border border-white/10 shadow-md">
                    Register
                </button>
            </div>
        </form>
        
        <div class="mx-auto w-2xl bg-stone-100/35 border border-stone-100/40 text-white p-4 rounded-lg shadow-md bg-blend-color-dodge">
            <h2 class="font-mont font-semibold text-md mb-2">Already have an account?</h2>
            <p class="text-sm">
                Click here to return to login.
                <a href="/">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-5 inline-block align-middle">
                        <path fill-rule="evenodd" d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25Zm4.28 10.28a.75.75 0 0 0 0-1.06l-3-3a.75.75 0 1 0-1.06 1.06l1.72 1.72H8.25a.75.75 0 0 0 0 1.5h5.69l-1.72 1.72a.75.75 0 1 0 1.06 1.06l3-3Z" clip-rule="evenodd" />
                    </svg>
                </a>
            </p>
        </div>
    </div>
</div>

@if (!ViewData.ModelState.IsValid)
{
    <div class="rounded-2xl fixed bottom-0 m-6 p-6 bg-rose-400 shadow max-w-lg">
        <h3 class="mb-2 font-semibold">We ran into the following errors while attempting to create your account:</h3>
        <div asp-validation-summary="ModelOnly"></div>
    </div>
}

