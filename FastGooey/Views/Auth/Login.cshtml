@model FastGooey.Models.ViewModels.LoginViewModel
@{ Layout = "PublicLayout"; }

<div class="my-10 mx-6 xl:mx-auto max-w-xl">
    <h1 class="mb-8 font-bold text-6xl text-shadow-zinc-600">
        Fast<br/> Gooey
    </h1>

    <div class="mb-4 text-center">
        <button type="button"
                class="w-full bg-stone-100 text-blueDark font-semibold py-3 rounded-lg shadow-md"
                data-passkey-login-url="@Url.Action("BeginPasskeyLogin", "Auth")"
                data-passkey-login-complete-url="@Url.Action("CompletePasskeyLogin", "Auth")"
                data-passkey-email-input-id="Email">
            Use a passkey
        </button>
        <p class="text-sm mt-2 text-gray-700">or sign in with email</p>
    </div>
    
    <form asp-action="Login" asp-controller="Auth" method="post">
        <div class="formGroup formGroupAddBackground mb-4">
            <div class="w-full border-b border-b-zinc-300 py-2 px-4">
                <p class="font-semibold text-sm">Log in</p>
            </div>
            <div class="pt-2 pb-4 px-4">
                <div class="mb-4">
                    <label asp-for="Email">Email Address</label>
                    <input asp-for="Email" type="email" class="w-full"/>
                    <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
                </div>
                <div class="mb-4">
                    <label asp-for="Password">Password</label>
                    <input asp-for="Password" type="password" class="w-full"/>
                    <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
                </div>
                <div class="mb-4">
                    <label class="flex gap-2 items-center">
                        <input asp-for="RememberMe" type="checkbox" class="mr-2"/>
                        <span>Remember me</span>
                    </label>
                </div>
                
                <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4"></div>
            </div>
            
            <partial name="~/Views/Partials/cloudflareTurnstileFormEmbed.cshtml" />
            
            <div class="border-t border-t-zinc-200 text-right p-4">
                <button type="submit" class="bg-blueMid text-white font-semibold rounded px-4 py-2 cursor-pointer text-sm">
                    Log In
                </button>
            </div>
        </div>
    </form>

    <form asp-action="RequestMagicLink" asp-controller="Auth" method="post" class="mt-6">
        @Html.AntiForgeryToken()
        <input type="hidden" name="redirectTo" value="@Url.Action("Login", "Auth")"/>
        <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]"/>
        <div class="formGroup formGroupAddBackground mb-4">
            <div class="w-full border-b border-b-zinc-300 py-2 px-4">
                <p class="font-semibold text-sm">Magic link</p>
            </div>
            <div class="pt-2 pb-4 px-4">
                <label>Email Address</label>
                <input name="Email" type="email" class="w-full"/>
                <p class="text-xs text-gray-500 mt-2">We'll email you a one-time sign-in link.</p>
            </div>

            <partial name="~/Views/Partials/cloudflareTurnstileFormEmbed.cshtml" />

            <div class="border-t border-t-zinc-200 text-right p-4">
                <button type="submit" class="bg-zinc-800 text-white font-semibold rounded px-4 py-2 cursor-pointer text-sm">
                    Email link
                </button>
            </div>
        </div>
    </form>
    
    <div class="text-center">
        <a href="/SignUp">Need to create an account? Register here &rarr;</a>
    </div>
</div>

@if (TempData["MagicLinkSent"] is not null)
{
    <div class="rounded-2xl fixed bottom-0 m-6 p-6 bg-emerald-200 shadow max-w-lg text-blueDark">
        <h3 class="mb-2 font-semibold">Check your email</h3>
        <p>If an account exists for that address, a sign-in link is on the way.</p>
    </div>
}

@if (TempData["MagicLinkInvalid"] is not null)
{
    <div class="rounded-2xl fixed bottom-0 m-6 p-6 bg-rose-400 shadow max-w-lg">
        <h3 class="mb-2 font-semibold">That link is no longer valid</h3>
        <p>Please request a new magic link and try again.</p>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/passkeys.js"></script>
}
