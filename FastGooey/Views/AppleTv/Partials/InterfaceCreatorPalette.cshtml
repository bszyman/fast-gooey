@model Guid

@{
    var interfaceOptions = new[]
    {
        new { Name = "Alert", Controller = "AppleTvAlert" },
        new { Name = "Catalog", Controller = "AppleTvCatalog" },
        new { Name = "Compilation", Controller = "AppleTvCompilation" },
        new { Name = "Descriptive Alert", Controller = "AppleTvDescriptiveAlert" },
        new { Name = "Div", Controller = "AppleTvDiv" },
        new { Name = "Form", Controller = "AppleTvForm" },
        new { Name = "List", Controller = "AppleTvList" },
        new { Name = "Loading", Controller = "AppleTvLoading" },
        new { Name = "Main", Controller = "AppleTvMain" },
        new { Name = "Menu Bar", Controller = "AppleTvMenuBar" },
        new { Name = "OneUp", Controller = "AppleTvOneUp" },
        new { Name = "Parade", Controller = "AppleTvParade" },
        new { Name = "Product Bundle", Controller = "AppleTvProductBundle" },
        new { Name = "Product", Controller = "AppleTvProduct" },
        new { Name = "Rating", Controller = "AppleTvRating" },
        new { Name = "Search", Controller = "AppleTvSearch" },
        new { Name = "Showcase", Controller = "AppleTvShowcase" },
        new { Name = "Stack", Controller = "AppleTvStack" }
    };
}

<div class="w-2xl h-2xl mx-auto rounded-lg bg-white">
    <div class="flex justify-baseline items-center p-2">
        <h2 class="flex-1 font-semibold text-lg">Create Interface</h2>
        <button type="button" class="cursor-pointer" onclick="toggleInterfaceCreatePalette()">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6 text-rose-500">
                <path fill-rule="evenodd" d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25Zm-1.72 6.97a.75.75 0 1 0-1.06 1.06L10.94 12l-1.72 1.72a.75.75 0 1 0 1.06 1.06L12 13.06l1.72 1.72a.75.75 0 1 0 1.06-1.06L13.06 12l1.72-1.72a.75.75 0 0 0-1.06-1.06L12 10.94l-1.72-1.72Z" clip-rule="evenodd" />
            </svg>
        </button>
    </div>

    <div id="contentSelector"
         class="mx-2 mb-2 border border-zinc-200 rounded-lg h-[400px] overflow-y-auto text-sm relative">
        <div class="w-full grid grid-cols-4 gap-2 p-2">
            @foreach (var option in interfaceOptions)
            {
                <button type="button"
                        class="text-center rounded-md border border-transparent hover:bg-zinc-100 p-2 transition cursor-pointer"
                        data-interface-create-option="true"
                        data-interface-create-url="@Url.Action("CreateInterface", option.Controller, new { workspaceId = Model })"
                        onclick="selectInterfaceCreateOption(this)">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-12 inline">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m2.25 0H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z" />
                    </svg>
                    <p class="text-sm font-semibold truncate">@option.Name</p>
                </button>
            }
        </div>
    </div>

    <div class="p-2 flex gap-2 justify-end">
        <button
            type="button"
            class="bg-zinc-300 text-zinc-700 font-semibold rounded px-2 py-1 cursor-pointer text-sm"
            onclick="toggleInterfaceCreatePalette()">
            Cancel
        </button>
        <button
            type="button"
            class="bg-green-600 text-white font-semibold rounded px-2 py-1 cursor-pointer text-sm"
            data-interface-create-target="#workspace"
            onclick="createInterfaceFromPalette(this)">
            Create
        </button>
    </div>
</div>
