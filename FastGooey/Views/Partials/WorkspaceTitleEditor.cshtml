@model FastGooey.Models.ViewModels.WorkspaceTitleEditorViewModel

<form 
    method="post"
    hx-post="@Model.Url"
    hx-trigger="blur from:#titleInput, keyup[key=='Enter'] from:#titleInput"
    hx-swap="none"
    onsubmit="return false;"
    class="mx-6 w-full">
    @Html.AntiForgeryToken()
    <input 
        type="text" 
        name="title" 
        id="titleInput"
        aria-label="title" 
        placeholder="title" 
        value="@Model.Title" 
        class="border border-zinc-300 rounded p-2 w-full transition-all duration-300 ease-in-out focus:outline-none" />
</form>