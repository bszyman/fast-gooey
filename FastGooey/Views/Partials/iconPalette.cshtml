<div id="iconPalette" class="fixed top-0 bottom-0 right-0 left-0 h-full w-full bg-panelNegativeSpace transition z-60 flex justify-center items-center hidden" aria-hidden="true">
    <div class="w-2xl h-2xl mx-auto rounded-lg bg-white">
        <div class="flex justify-baseline items-center p-2">
            <h2 class="flex-1 font-semibold text-lg">Select Icon</h2>
            <button type="button" class="cursor-pointer" onclick="closeIconPicker()">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6 text-rose-500">
                    <path fill-rule="evenodd" d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25Zm-1.72 6.97a.75.75 0 1 0-1.06 1.06L10.94 12l-1.72 1.72a.75.75 0 1 0 1.06 1.06L12 13.06l1.72 1.72a.75.75 0 1 0 1.06-1.06L13.06 12l1.72-1.72a.75.75 0 1 0-1.06-1.06L12 10.94l-1.72-1.72Z" clip-rule="evenodd" />
                </svg>
            </button>
        </div>

        <div id="contentSelector"
             class="mx-2 mb-2 border border-zinc-200 rounded-lg h-[400px] overflow-y-auto text-sm relative">
            <div class="w-full grid grid-cols-4 gap-2 p-2">
                @foreach (var iconName in iconNames)
                {
                    <button type="button"
                            class="text-center rounded-md border border-transparent hover:bg-zinc-100 p-2 transition cursor-pointer"
                            data-icon-picker-item="true"
                            data-icon-picker-id="@iconName"
                            onclick="selectIconPickerItem(this)">
                        <img src="@($"{iconBaseUrl}/{iconName}.svg")"
                             alt="@($"{iconName} icon")"
                             class="size-10 inline"
                             loading="lazy"
                             referrerpolicy="no-referrer" />
                        <p class="text-xs font-semibold mt-1">@iconName</p>
                    </button>
                }
            </div>
        </div>

        <div class="p-2 flex gap-2 justify-end">
            <button type="button" class="bg-zinc-100 text-zinc-700 font-semibold rounded px-2 py-1 cursor-pointer text-sm" onclick="clearIconPickerSelectionValue()">Clear Icon</button>
            <button type="button" class="bg-zinc-300 text-zinc-700 font-semibold rounded px-2 py-1 cursor-pointer text-sm" onclick="closeIconPicker()">Cancel</button>
            <button type="button" class="bg-green-600 text-white font-semibold rounded px-2 py-1 cursor-pointer text-sm" onclick="saveIconPickerSelection()">Select</button>
        </div>
    </div>
</div>
