@model FastGooey.Models.ViewModels.Weather.WeatherWorkspaceViewModel
@{
    decimal latitude = new Decimal(30.40728);
    decimal longitude = new Decimal(-87.21936);
    
    decimal.TryParse(Model.Data?.Latitude, out latitude);
    decimal.TryParse(Model.Data?.Longitude, out longitude);
}

<script id="map-data-points" type="application/json">
@Html.Raw(System.Text.Json.JsonSerializer.Serialize(new[] 
{
    new 
    {
        Latitude = latitude,
        Longitude = longitude,
        Title = Model.Data.Location
    }
}))
</script>

<form method="post"
      hx-post="/Workspaces/@Model.ContentNode.Workspace.PublicId/Widgets/Weather/Workspace/@Model.ContentNode.DocId"
      hx-target="#workspaceEditor">
    @Html.AntiForgeryToken()
    <div id="editor" class="mx-auto max-w-3xl">
        <div class="flex justify-center mb-8">
            <div id="mapKit" class="mx-auto relative block" style="width: 800px; height: 500px;"></div>
        </div>
        
        <div class="formGroup mb-8">
            <div class="w-full border-b border-b-zinc-300 py-2 px-4">
                <p class="font-semibold">Configuration</p>
            </div>
            <div class="py-2 px-4">
                <input type="hidden" id="latitude" name="latitude" value="@Model.Data.Latitude"/>
                <input type="hidden" id="longitude" name="longitude" value="@Model.Data.Longitude"/>
                <input type="hidden" id="coordinates" name="coordinates" value="@Model.Data.Coordinates" />
                <div>
                    <label for="location">Location</label>
                    <div class="flex gap-2">
                        <input 
                            type="text" 
                            id="location" 
                            name="location" 
                            value="@Model.Data.Location"
                            onkeyup="if(event.key === 'Enter') document.getElementById('searchBtn').click()"
                            />
                        <button
                            id="searchBtn"
                            type="button"
                            onclick="toggleEditor()"
                            hx-get="/Workspaces/@Model.ContentNode.Workspace.PublicId/Widgets/Weather/search-panel"
                            hx-include="#location"
                            hx-target="#editorPanel"
                            class="px-2 py-1 rounded cursor-pointer bg-blueMid text-white font-semibold">Search...</button>
                    </div>
                    <div class="my-2">
                        <p id="descriptiveCoords" class="text-xs font-semibold uppercase text-grayMid">
                            @Model.Data.Coordinates
                        </p>
                    </div>
                </div>
            </div>
        </div>
        
        <div 
            id="previewPanel" 
            class="contentGroup"
            hx-get="/Workspaces/@Model.ContentNode.Workspace.PublicId/Widgets/Weather/preview-panel/@Model.ContentNode.DocId" 
            hx-trigger="load, refreshPreview from:body"
            hx-swap="innerHTML"
            hx-target="#previewPanel"
            >
            <div class="w-full border-b border-b-zinc-300 py-2 px-4">
                <p class="font-semibold">Preview</p>
            </div>
            <div class="p-4">
                <p>Loading...</p>
            </div>
        </div>
    </div>

    <div class="fixed bottom-0 bg-white h-16 border-t border-t-zinc-300 flex justify-between items-center px-6 left-[20%] right-0">
        <div class="flex items-center w-1/2">
            <p class="text-sm">Widgets :: Weather</p>
        </div>
        <div class="flex items-center justify-end w-1/2 text-right">
            <button
                type="submit"
                class="bg-emerald-700 text-white font-semibold rounded px-4 py-2 cursor-pointer text-sm">
                Save
            </button>
        </div>
    </div>
</form>