@using FastGooey.Models.ViewModels
@model FastGooey.Models.ViewModels.Mac.MacInterfaceTableViewModel

<div class="fixed z-50 bg-white flex h-20 border-b border-b-zinc-300 left-[20%] right-0">
    <div class="flex-1 flex items-center">
        @await Html.PartialAsync("~/Views/Partials/WorkspaceTitleEditor.cshtml", new WorkspaceTitleEditorViewModel
        {
            Url = $"/Workspaces/{Model.WorkspaceId()}/UpdateTitle/{Model.InterfaceId()}",
            Title = Model.Workspace!.ContentNode!.Name
        })
    </div>
    <button 
        hx-get="/Workspaces/@Model.WorkspaceId()/interfaces/mac/table/workspace/@Model.InterfaceId()"
        hx-target="#workspaceEditor"
        type="button" 
        class="sectionButton activeSectionButton" 
        onclick="changeSection(this)">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
            <path fill-rule="evenodd" d="M1.5 5.625c0-1.036.84-1.875 1.875-1.875h17.25c1.035 0 1.875.84 1.875 1.875v12.75c0 1.035-.84 1.875-1.875 1.875H3.375A1.875 1.875 0 0 1 1.5 18.375V5.625ZM21 9.375A.375.375 0 0 0 20.625 9h-7.5a.375.375 0 0 0-.375.375v1.5c0 .207.168.375.375.375h7.5a.375.375 0 0 0 .375-.375v-1.5Zm0 3.75a.375.375 0 0 0-.375-.375h-7.5a.375.375 0 0 0-.375.375v1.5c0 .207.168.375.375.375h7.5a.375.375 0 0 0 .375-.375v-1.5Zm0 3.75a.375.375 0 0 0-.375-.375h-7.5a.375.375 0 0 0-.375.375v1.5c0 .207.168.375.375.375h7.5a.375.375 0 0 0 .375-.375v-1.5ZM10.875 18.75a.375.375 0 0 0 .375-.375v-1.5a.375.375 0 0 0-.375-.375h-7.5a.375.375 0 0 0-.375.375v1.5c0 .207.168.375.375.375h7.5ZM3.375 15h7.5a.375.375 0 0 0 .375-.375v-1.5a.375.375 0 0 0-.375-.375h-7.5a.375.375 0 0 0-.375.375v1.5c0 .207.168.375.375.375Zm0-3.75h7.5a.375.375 0 0 0 .375-.375v-1.5A.375.375 0 0 0 10.875 9h-7.5A.375.375 0 0 0 3 9.375v1.5c0 .207.168.375.375.375Z" clip-rule="evenodd" />
        </svg>
        Table
    </button>
    <button 
        hx-get="/Workspaces/@Model.WorkspaceId()/interfaces/mac/table/workspace/@Model.InterfaceId()/structure"
        hx-target="#workspaceEditor"
        type="button" 
        class="sectionButton" 
        onclick="changeSection(this)">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6.429 9.75 2.25 12l4.179 2.25m0-4.5 5.571 3 5.571-3m-11.142 0L2.25 7.5 12 2.25l9.75 5.25-4.179 2.25m0 0L21.75 12l-4.179 2.25m0 0 4.179 2.25L12 21.75 2.25 16.5l4.179-2.25m11.142 0-5.571 3-5.571-3" />
        </svg>
        Structure
    </button>
    @await Html.PartialAsync(
        "~/Views/Partials/WorkspaceInfoButton.cshtml", 
        $"/Workspaces/{Model.WorkspaceId()}/Info/{Model.InterfaceId()}"
    )
</div>

<div id="workspaceEditor" class="mt-30 mb-24">
    @await Html.PartialAsync("Workspace.cshtml", Model.Workspace)
</div>