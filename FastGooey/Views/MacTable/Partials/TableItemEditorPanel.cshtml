@model FastGooey.Models.ViewModels.Mac.MacInterfaceTableItemEditorPanelViewModel
@{
    var formUrl = Model.Content.Identifier.Equals(Guid.Empty)
        ? Url.Action("SaveTableItemEditorPanel", "MacTable", new { workspaceId = Model.WorkspaceId, interfaceId = Model.InterfaceId?.ToBase64Url() })
        : Url.Action("SaveTableItemEditorPanel", "MacTable", new { workspaceId = Model.WorkspaceId, interfaceId = Model.InterfaceId?.ToBase64Url(), itemId = Model.Content.Identifier });
}

<form method="post"
      hx-post="@formUrl"
      hx-target="#editorPanel">
    <div class="grid grid-rows-[auto_1fr_auto] min-h-screen bg-gray-100">
        @* <!-- Header - Fixed at top --> *@
        <div class="bg-white flex w-full h-20 border-b border-b-zinc-300 flex-shrink-0">
            <div class="flex-1 flex items-center">
                <p class="mx-6 font-bold">Edit Table Item</p>
            </div>
        </div>

        @* <!-- Content - Scrollable --> *@
        <div class="overflow-y-auto py-4 px-4">
            <div class="formGroup formGroupAddBackground mb-4">
                <div class="w-full border-b border-b-zinc-300 py-2 px-4">
                    <p class="font-semibold text-sm">Name</p>
                </div>
                <div class="py-4 px-4">
                    <div class="mb-4">
                        <label for="gooeyName">Name</label>
                        <input type="text" id="gooeyName" name="gooeyName" value="@Model.Content.GooeyName" required="required" />
                    </div>
                </div>
            </div>
            <div class="formGroup formGroupAddBackground mb-4">
                <div class="w-full border-b border-b-zinc-300 py-2 px-4">
                    <p class="font-semibold text-sm">Relations</p>
                </div>
                <div class="py-4 px-4">
                    <div class="mb-4">
                        <label for="relatedUrlLinkButton">Related Url</label>
                        <input type="hidden" id="relatedUrl" name="relatedUrl" value="@Model.Content.RelatedUrl" />
                        <button type="button"
                                id="relatedUrlLinkButton"
                                class="linkEditorTriggerButton"
                                onclick="openLinkEditor(this)"
                                data-link-editor-trigger="true"
                                data-link-editor-target="relatedUrl"
                                data-link-editor-display="relatedUrlLinkDisplay">
                            Select link...
                        </button>
                        <p id="relatedUrlLinkDisplay" class="truncate text-xs text-gray-500 mt-2 ml-1">No link selected.</p>
                    </div>
                    <div class="mb-4">
                        <label for="doubleClickUrlLinkButton">Double-Click Url</label>
                        <input type="hidden" id="doubleClickUrl" name="doubleClickUrl" value="@Model.Content.DoubleClickUrl" />
                        <button type="button"
                                id="doubleClickUrlLinkButton"
                                class="linkEditorTriggerButton"
                                onclick="openLinkEditor(this)"
                                data-link-editor-trigger="true"
                                data-link-editor-target="doubleClickUrl"
                                data-link-editor-display="doubleClickUrlLinkDisplay">
                            Select link...
                        </button>
                        <p id="doubleClickUrlLinkDisplay" class="truncate text-xs text-gray-500 mt-2 ml-1">No link selected.</p>
                    </div>
                </div>
            </div>
            <div class="formGroup formGroupAddBackground mb-8">
                <div class="w-full border-b border-b-zinc-300 py-2 px-4">
                    <p class="font-semibold text-sm">Content</p>
                </div>
                <div class="py-4 px-4">
                    @foreach (var field in Model.Structure)
                    {
                        var fieldValue = Model.Content.Content.ContainsKey(field.FieldAlias) ? Model.Content.Content[field.FieldAlias] : string.Empty;
                        
                        <div class="mb-4">
                            @switch (field.FieldType)
                            {
                                case "textString":
                                    <label for="@field.FieldAlias">@field.FieldName</label>
                                    <input type="text" id="@field.FieldAlias" name="@field.FieldAlias" class="w-full" value="@fieldValue"/>
                                    break;
                                case "longText":
                                    <label for="@field.FieldAlias">@field.FieldName</label>
                                    <textarea id="@field.FieldAlias" name="@field.FieldAlias" class="w-full h-48">@fieldValue</textarea>
                                    break;
                                case "integer":
                                    <label for="@field.FieldAlias">@field.FieldName</label>
                                    <input type="number" id="@field.FieldAlias" name="@field.FieldAlias" class="w-full" value="@fieldValue"/>
                                    break;
                                case "boolean":
                                    var fieldValueAsBool = bool.TryParse(fieldValue.ToString(), out var b) ? b : false;
                                    <label for="@field.FieldAlias">@field.FieldName</label>
                                    <select id="@field.FieldAlias" name="@field.FieldAlias" class="w-full">
                                        @if (!fieldValueAsBool)
                                        {
                                            <option value="true">True</option>
                                            <option value="false" selected="selected">False</option>
                                        }
                                        else
                                        {
                                            <option value="true" selected="selected">True</option>
                                            <option value="false">False</option>
                                        }
                                    </select>
                                    break;
                                case "date":
                                    <label for="@field.FieldAlias">@field.FieldName</label>
                                    <input type="date" id="@field.FieldAlias" name="@field.FieldAlias" class="w-full" value="@fieldValue"/>
                                    break;
                                case "time":
                                    <label for="@field.FieldAlias">@field.FieldName</label>
                                    <input type="time" id="@field.FieldAlias" name="@field.FieldAlias" class="w-full" value="@fieldValue"/>
                                    break;
                                case "dateTime":
                                    <label for="@field.FieldAlias">@field.FieldName</label>
                                    <input type="datetime-local" id="@field.FieldAlias" name="@field.FieldAlias" class="w-full" value="@fieldValue"/>
                                    break;
                                case "url":
                                    <label for="@(field.FieldAlias)LinkButton">@field.FieldName</label>
                                    <input type="hidden" id="@field.FieldAlias" name="@field.FieldAlias" value="@fieldValue"/>
                                    <button type="button"
                                            id="@(field.FieldAlias)LinkButton"
                                            class="linkEditorTriggerButton"
                                            onclick="openLinkEditor(this)"
                                            data-link-editor-trigger="true"
                                            data-link-editor-target="@field.FieldAlias"
                                            data-link-editor-display="@(field.FieldAlias)LinkDisplay">
                                        Select link...
                                    </button>
                                    <span id="@(field.FieldAlias)LinkDisplay" class="truncate text-xs text-gray-500 ml-1">No link selected.</span>
                                    break;
                                case "email":
                                    <label for="@field.FieldAlias">@field.FieldName</label>
                                    <input type="email" id="@field.FieldAlias" name="@field.FieldAlias" placeholder="user@FastGooey.com" value="@fieldValue"/>
                                    break;
                                case "phone":
                                    <label for="@field.FieldAlias">@field.FieldName</label>
                                    <input type="tel" id="@field.FieldAlias" name="@field.FieldAlias" placeholder="(800) 867-5309" value="@fieldValue"/>
                                    break;
                                case "dropdown":
                                    <label for="@field.FieldAlias">@field.FieldName</label>
                                    <select id="@field.FieldAlias" name="@field.FieldAlias" class="w-full">
                                        @foreach (var option in field.DropdownOptions)
                                        {
                                            if (option.Equals(fieldValue))
                                            {
                                                <option value="@option" selected="selected">@option</option>
                                            }
                                            else
                                            {
                                                <option value="@option">@option</option>
                                            }
                                        }
                                    </select>
                                    break;
                                default:
                                    <p class="text-sm text-gray-400">Unsupported type: @field.FieldType</p>
                                    break;
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
            
        @* <!-- Footer - Fixed at bottom --> *@
        <div class="bg-white w-full h-16 border-t border-t-zinc-300 flex justify-between items-center px-6 flex-shrink-0">
            <div class="flex gap-2 items-center w-1/2"></div>
            <div class="flex gap-2 items-center justify-end w-1/2 text-right">
                @await Html.PartialAsync("~/Views/Partials/CancelButton.cshtml")
                @await Html.PartialAsync("~/Views/Partials/SubmitButton.cshtml")
            </div>
        </div>
    </div>
</form>
