@{ Layout = null; }

<div class="fixed z-50 bg-white flex h-20 border-b border-b-zinc-300 left-[20%] right-0">
    <div class="flex-1 flex items-center">
        <input type="text" value="10th Annual Event" class="border border-zinc-300 rounded p-2 mx-6 w-full" />
    </div>
    <button class="text-center flex flex-col items-center gap-2 align-middle justify-center cursor border-l border-l-zinc-300 w-26 cursor-pointer bg-blueMid text-white font-semibold">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="m2.25 15.75 5.159-5.159a2.25 2.25 0 0 1 3.182 0l5.159 5.159m-1.5-1.5 1.409-1.409a2.25 2.25 0 0 1 3.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 0 0 1.5-1.5V6a1.5 1.5 0 0 0-1.5-1.5H3.75A1.5 1.5 0 0 0 2.25 6v12a1.5 1.5 0 0 0 1.5 1.5Zm10.5-11.25h.008v.008h-.008V8.25Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z" />
        </svg>
        Page Content
    </button>
    <button class="text-center flex flex-col items-center gap-2 align-middle justify-center cursor border-l border-l-zinc-300 w-26 cursor-pointer">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="m11.25 11.25.041-.02a.75.75 0 0 1 1.063.852l-.708 2.836a.75.75 0 0 0 1.063.853l.041-.021M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9-3.75h.008v.008H12V8.25Z" />
        </svg>
        Info
    </button>
</div>

<div id="editor" class="mx-auto mt-30 mb-24 max-w-3xl">
    <div class="formGroup mb-8">
        <div class="w-full border-b border-b-zinc-300 py-2 px-4">
            <p class="font-semibold">Page Content</p>
        </div>
        <div class="py-4 px-4">
            <button 
                type="button"
                onclick="toggleEditor()"
                hx-get="/Interfaces/AppleMobileContentTypeSelectorPanel"
                hx-target="#editorPanel"
                class="w-full rounded bg-zinc-100 text-zinc-700 font-semibold px-6 py-3 cursor-pointer">
                Add Content
            </button>
        </div>
    </div>
</div>

<div class="fixed bottom-0 bg-white h-16 border-t border-t-zinc-300 flex justify-between items-center px-6 left-[20%] right-0">
    <div class="flex items-center w-1/2">
        <p class="text-sm">/Interfaces/iOS/Surf Spots</p>
    </div>
    <div class="flex items-center justify-end w-1/2 text-right">
        <button class="bg-emerald-700 text-white font-semibold rounded px-4 py-2 cursor-pointer text-sm">Save</button>
    </div>
</div>