@using Microsoft.EntityFrameworkCore.Metadata.Internal
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - FastGooey</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/site.dist.css" asp-append-version="true"/>
    @* <link rel="stylesheet" href="~/FastGooey.styles.css" asp-append-version="true"/> *@
    @* <link rel="stylesheet" href="~/semantic/dist/semantic.min.css" /> *@
    <script src="https://cdn.apple-mapkit.com/mk/5.x.x/mapkit.core.js"
            crossorigin async
            data-callback="initMapKit"
            data-libraries="services,full-map,geojson"
            data-token="@ViewBag.MapKitToken"></script>
</head>
<body>

<div class="absolute layout-grid text-sm">
  <nav class="sidebar">
    <div class="sidebar-content">
      <h2>FastGooey</h2>
      <div class="interfaces mb-6">
        <div class="font-bold uppercase mb-1">Interfaces</div>
        <ul>
          <li>
            <div style="display: flex; align-items: center; gap: 4px; margin-bottom: 4px;">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6" style="width: 22px; height: 22px;">
                <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 1.5H8.25A2.25 2.25 0 0 0 6 3.75v16.5a2.25 2.25 0 0 0 2.25 2.25h7.5A2.25 2.25 0 0 0 18 20.25V3.75a2.25 2.25 0 0 0-2.25-2.25H13.5m-3 0V3h3V1.5m-3 0h3m-3 18.75h3" />
              </svg>
              <a href="#">iOS</a>
            </div>

            <ul style="margin-left: 12px;">
              <li><a href="/Interfaces/AppleMobileListWorkspace" hx-boost="true" hx-target="#workspace" hx-push-url="/Interfaces/AppleMobileList">Surf Spots</a></li>
              <li><a href="/Interfaces/AppleMobileFormWorkspace" hx-boost="true" hx-target="#workspace" hx-push-url="/Interfaces/AppleMobileForm">Surf Spot Submission</a></li>
              <li><a href="/Interfaces/AppleMobileContentWorkspace" hx-boost="true" hx-target="#workspace" hx-push-url="/Interfaces/AppleMobileContent">10th Annual Event</a></li>
            </ul>
          </li>
          <li>
            <div style="display: flex; align-items: center; gap: 4px; margin-bottom: 4px;">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6" style="width: 22px; height: 22px;">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 17.25v1.007a3 3 0 0 1-.879 2.122L7.5 21h9l-.621-.621A3 3 0 0 1 15 18.257V17.25m6-12V15a2.25 2.25 0 0 1-2.25 2.25H5.25A2.25 2.25 0 0 1 3 15V5.25m18 0A2.25 2.25 0 0 0 18.75 3H5.25A2.25 2.25 0 0 0 3 5.25m18 0V12a2.25 2.25 0 0 1-2.25 2.25H5.25A2.25 2.25 0 0 1 3 12V5.25" />
              </svg>
              <a href="#">macOS</a>
            </div>
          </li>
          <li>
            <div style="display: flex; align-items: center; gap: 4px; margin-bottom: 4px;">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6" style="width: 22px; height: 22px;">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 20.25h12m-7.5-3v3m3-3v3m-10.125-3h17.25c.621 0 1.125-.504 1.125-1.125V4.875c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125Z" />
              </svg>
              <a href="#">tvOS</a>
            </div>
          </li>
        </ul>
      </div>
      
      <div class="widgets mb-6">
        <div class="font-bold uppercase mb-1">Widgets</div>
        <ul>
          <li>
            <a href="/Widgets/WeatherWorkspace" hx-boost="true" hx-target="#workspace" hx-push-url="/Widgets/Weather">Pensacola Weather</a>
          </li>
          <li>
            <a href="/Widgets/ClockWorkspace" hx-boost="true" hx-target="#workspace" hx-push-url="/Widgets/Clock">California Clock</a>
          </li>
          <li>
            <a href="/Widgets/MapWorkspace" hx-boost="true" hx-target="#workspace" hx-push-url="/Widgets/Map">Chicago Map</a>
          </li>
          <li>
            <a href="/Widgets/RssWorkspace" hx-boost="true" hx-target="#workspace" hx-push-url="/Widgets/Rss">MacRumors Feed</a>
          </li>
        </ul>
      </div>
      
      <div class="content mb-6">
        <div class="font-bold uppercase mb-1">Content</div>
      </div>
      
      <div class="collections mb-6">
        <div class="font-bold uppercase mb-1">Collections</div>
      </div>
      
      <div class="system">
        <div class="font-bold uppercase mb-1">System</div>
        <ul>
          <li><a href="#">Manage Account</a></li>
          <li><a href="#">Logout</a></li>
        </ul>
      </div>
    </div>
  </nav>
    
  <main id="workspace" class="main-content relative" role="main">
    @RenderBody()
  </main>
</div>

@* <script src="~/lib/jquery/dist/jquery.min.js"></script> *@
<script src="~/lib/htmx/htmx_207.min.js"></script>
<script src="~/lib/alpine/alpine_3_15_0.min.js"></script>
<script src="~/js/cupertino-mapkit.js"></script>
@* <script src="~/semantic/dist/semantic.min.js"></script> *@

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>