@model FastGooey.Models.ViewModels.RssFeed.RssViewModel

<div class="fixed z-50 bg-white flex h-20 border-b border-b-zinc-300 left-[20%] right-0">
    <div class="flex-1 flex items-center">
        <input type="text" value="MacRumors RSS Feed" class="border border-zinc-300 rounded p-2 mx-6 w-full" />
    </div>
    <button 
        hx-get="/Workspaces/@Model.WorkspaceViewModel.ContentNode.Workspace.PublicId/Widgets/RssFeed/workspace/@Model.WorkspaceViewModel.ContentNode.DocId"
        hx-target="#workspaceEditor"
        type="button" 
        class="sectionButton activeSectionButton"
        onclick="changeSection(this)">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L6.832 19.82a4.5 4.5 0 0 1-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 0 1 1.13-1.897L16.863 4.487Zm0 0L19.5 7.125" />
        </svg>
        Widget
    </button>
    <button 
        hx-get="/Workspaces/@Model.WorkspaceViewModel.ContentNode.Workspace.PublicId/Info/@Model.WorkspaceViewModel.ContentNode.DocId"
        hx-target="#workspaceEditor"
        type="button" 
        class="sectionButton" 
        onclick="changeSection(this)">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="m11.25 11.25.041-.02a.75.75 0 0 1 1.063.852l-.708 2.836a.75.75 0 0 0 1.063.853l.041-.021M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9-3.75h.008v.008H12V8.25Z" />
        </svg>
        Info
    </button>
</div>

<div id="workspaceEditor" class="mt-30 mb-24">
    @await Html.PartialAsync("Workspace.cshtml", Model.WorkspaceViewModel)
</div>