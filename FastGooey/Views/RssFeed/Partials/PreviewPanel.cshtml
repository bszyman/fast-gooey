@model FastGooey.Models.ViewModels.RssFeed.RssPreviewPanelViewModel

<div id="previewPanel" class="formGroup">
    <div class="w-full border-b border-b-zinc-300 py-2 px-4">
        <p class="font-semibold">Preview</p>
    </div>
    @if (string.IsNullOrEmpty(Model.FeedUrl))
    {
        <div class="p-4 text-center py-6 bg-zinc-100">
            <p>Preview not available</p>
        </div>
    }
    else
    {
        <div class="p-4">
            <div class="mb-4">
                <div class="bg-zinc-100 rounded-2xl flex justify-between p-2 gap-4">
                    <div class="flex items-center justify-center rounded-xl font-bold text-center w-28 h-28 text-3xl bg-gradient-to-b from-blueMid to-blueLight">
                        <p class="text-center">RSS</p>
                    </div>
                    <div class="flex-1 pt-2">
                        <p class="text-lg font-semibold">@Model.FeedTitle</p>
                        <p class="mb-2">@Model.FeedDescription</p>
                        <p class="text-xs font-semibold uppercase text-grayMid mb-4">@Model.FeedUrl</p>
                    </div>
                </div>
            </div>
            @foreach (var item in Model.Items)
            {
                <div class="border-b border-b-zinc-300 py-2">
                    <p class="font-semibold">@item.Title</p>
                    <div>
                        <p>@item.Summary</p>
                    </div>
                </div>
            }
        </div>
    }
</div>