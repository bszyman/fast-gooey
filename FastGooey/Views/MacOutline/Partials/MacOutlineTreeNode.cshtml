@model FastGooey.Models.JsonDataModels.Mac.MacOutlineJsonDataModel
@{
    var url = Url.Action(
        "CreateEditorPanel",
        "MacOutline",
        new { workspaceId = ViewBag.WorkspaceId, interfaceId = ViewBag.InterfaceId, parentId = Model.Identifier }
    );
}

<li>
    <div class="flex items-center py-2 border-b border-b-zinc-200">
        <p class="pr-3">@Model.Name</p>
        <button type="button" 
                class="cursor-pointer" 
                onclick="toggleEditor()" 
                hx-get="@url" 
                hx-target="#editorPanel">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-5 text-zinc-400 hover:text-blueMid">
                <path fill-rule="evenodd" d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25ZM12.75 9a.75.75 0 0 0-1.5 0v2.25H9a.75.75 0 0 0 0 1.5h2.25V15a.75.75 0 0 0 1.5 0v-2.25H15a.75.75 0 0 0 0-1.5h-2.25V9Z" clip-rule="evenodd"/>
            </svg>
        </button>
        <button type="button" 
                class="cursor-pointer" 
                hx-confirm="Are you sure you want to delete this item?" 
                hx-target="#workspaceEditor" 
                hx-delete="@Url.Action("DeleteItem", "MacOutline", new { workspaceId = ViewBag.WorkspaceId, interfaceId = ViewBag.InterfaceId, itemId = Model.Identifier })">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-5 text-zinc-400 hover:text-blueMid">
                <path fill-rule="evenodd" d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25Zm3 10.5a.75.75 0 0 0 0-1.5H9a.75.75 0 0 0 0 1.5h6Z" clip-rule="evenodd"/>
            </svg>
        </button>
    </div>

    @if (Model.Children.Count > 0)
    {
        <ul class="pl-3" role="tree">
            @foreach (var child in Model.Children)
            {
                <partial name="Partials/MacOutlineTreeNode" model="child" />
            }
        </ul>
    }
</li>
