@model FastGooey.Models.FormModels.CreateWorkspace
@{ Layout = "~/Views/Shared/PublicLayout.cshtml"; }

<div class="bg-white flex w-full h-20 border-b border-b-zinc-300">
    <div class="flex-1 flex items-center px-6">
        <p class="mx-6 font-bold">Create Workspace</p>
    </div>
</div>

<form asp-action="CreateWorkspace" asp-controller="Workspaces" method="post" hx-boost="true">
    <div id="editor" class="mx-auto mt-18 max-w-3xl">
        <div class="formGroup mb-8">
            <div class="w-full border-b border-b-zinc-300 py-2 px-4">
                <p class="font-semibold">Workspace Details</p>
            </div>
            <div class="py-2 px-4 mt-1">
                <div class="mb-4">
                    <label asp-for="WorkspaceName"></label>
                    <input asp-for="WorkspaceName" 
                           type="text" 
                           class="w-full"
                    />
                    <span asp-validation-for="WorkspaceName" class="text-red-600 text-sm mt-1 block"></span>
                </div>
            </div>
        </div>
    </div>

    <div class="fixed bottom-0 bg-white h-16 border-t border-t-zinc-300 flex justify-between items-center px-6 left-0 right-0">
        <div class="flex items-center w-1/2">
            <a asp-action="Index" asp-controller="Home" class="text-zinc-600 hover:text-zinc-800">Cancel</a>
        </div>
        <div class="flex items-center justify-end w-1/2 text-right">
            <button type="submit" class="bg-emerald-700 text-white font-semibold rounded px-4 py-2 cursor-pointer text-sm hover:bg-emerald-800">
                Create workspace
            </button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}