@model FastGooey.Models.ViewModels.AppleMobileInterface.AppleMobileContentHeadlineConfigurationPanelViewModel
@{
    var url = $"/Workspaces/{Model.WorkspaceId}/Interfaces/AppleMobile/Content/{Model.InterfaceId}/headline-item";
    url = Model.Content.Identifier.Equals(Guid.Empty) ? url : $"{url}/{Model.Content.Identifier}";
}

<div class="bg-white flex w-full h-20 border-b border-b-zinc-300">
    <div class="flex-1 flex items-center">
        <p class="mx-6 font-bold">Edit Headline</p>
    </div>
</div>

<form method="post"
      hx-post="@url"
      hx-target="#workspaceEditor"
      hx-on::after-request="toggleEditor()">
    @Html.AntiForgeryToken()
    <div class="py-4 px-4">
        <div class="formGroup mb-8">
            <div class="w-full border-b border-b-zinc-300 py-2 px-4">
                <p class="font-semibold text-sm">Edit Content</p>
            </div>
            <div class="py-4 px-4">
                <div>
                    <label for="headline">Headline</label>
                    <div class="flex gap-2">
                        <input 
                            type="text" 
                            id="headline" 
                            name="headline" 
                            value="@Model.Content.Headline"
                        />
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="absolute bottom-0 bg-white w-full h-16 border-t border-t-zinc-300 flex justify-between items-center px-6">
        <div class="flex items-center w-1/2">
            @if (!Model.Content.Identifier.Equals(Guid.Empty))
            {
                <button
                    type="button"
                    hx-delete="/Workspaces/@Model.WorkspaceId/Interfaces/AppleMobile/Content/@Model.InterfaceId/item/@Model.Content.Identifier"
                    hx-target="#workspaceEditor"
                    class="bg-rose-600 text-white font-semibold rounded px-4 py-2 cursor-pointer text-sm">
                    Delete
                </button>
            }
        </div>
        <div class="flex items-center justify-end w-1/2 text-right gap-2">
            <button type="button" onclick="toggleEditor()" class="bg-zinc-300 text-zinc-700 font-semibold rounded px-4 py-2 cursor-pointer text-sm">
                Cancel
            </button>
            <button type="submit" class="bg-emerald-700 text-white font-semibold rounded px-4 py-2 cursor-pointer text-sm">
                Save
            </button>
        </div>
    </div>
</form>