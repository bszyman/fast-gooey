@model FastGooey.Models.ViewModels.AppleMobileInterface.AppleMobileContentViewModel

<div class="fixed z-50 bg-white flex h-20 border-b border-b-zinc-300 left-[20%] right-0">
    <div class="flex-1 flex items-center">
        <form 
            method="post"
            hx-post="/Workspaces/@Model.WorkspaceViewModel.ContentNode.Workspace.PublicId/UpdateTitle/@Model.WorkspaceViewModel.ContentNode.DocId"
            hx-trigger="blur from:#titleInput, keyup[key=='Enter'] from:#titleInput"
            hx-swap="none"
            onsubmit="return false;"
            class="mx-6 w-full">
            @Html.AntiForgeryToken()
            <input 
                type="text" 
                name="title" 
                id="titleInput"
                aria-label="title" 
                placeholder="title" 
                value="@Model.WorkspaceViewModel.ContentNode.Name" 
                class="border border-zinc-300 rounded p-2 w-full transition-all duration-300 ease-in-out focus:border-emerald-500 focus:outline-none" />
        </form>
    </div>
    <button 
        hx-get="/Workspaces/@Model.WorkspaceViewModel.ContentNode.Workspace.PublicId/Interfaces/AppleMobile/Content/workspace/@Model.WorkspaceViewModel.ContentNode.DocId"
        hx-target="#workspaceEditor"
        type="button" 
        class="sectionButton activeSectionButton" onclick="changeSection(this)">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="m2.25 15.75 5.159-5.159a2.25 2.25 0 0 1 3.182 0l5.159 5.159m-1.5-1.5 1.409-1.409a2.25 2.25 0 0 1 3.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 0 0 1.5-1.5V6a1.5 1.5 0 0 0-1.5-1.5H3.75A1.5 1.5 0 0 0 2.25 6v12a1.5 1.5 0 0 0 1.5 1.5Zm10.5-11.25h.008v.008h-.008V8.25Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z" />
        </svg>
        Page Content
    </button>
    <button 
        hx-get="/Workspaces/@Model.WorkspaceViewModel.ContentNode.Workspace.PublicId/Info/@Model.WorkspaceViewModel.ContentNode.DocId"
        hx-target="#workspaceEditor"
        type="button" 
        class="sectionButton" onclick="changeSection(this)">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="m11.25 11.25.041-.02a.75.75 0 0 1 1.063.852l-.708 2.836a.75.75 0 0 0 1.063.853l.041-.021M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9-3.75h.008v.008H12V8.25Z" />
        </svg>
        Info
    </button>
</div>

<div id="workspaceEditor" class="mt-30 mb-24">
    @await Html.PartialAsync("Workspace.cshtml", Model.WorkspaceViewModel)
</div>