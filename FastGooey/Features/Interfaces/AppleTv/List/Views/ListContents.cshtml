@model FastGooey.Features.Interfaces.AppleTv.List.Models.AppleTvListWorkspaceViewModel

<div id="editor" class="mx-auto max-w-4xl mt-8">
    <div
        hx-get="@Url.Action("ListContentWorkspace", "AppleTvList", new { workspaceId = Model.WorkspaceId(), interfaceId = Model.InterfaceId() })"
        hx-trigger="refreshWorkspace from:body">
        <div class="mx-6 mb-2 xl:mx-auto text-right">
            <button
                hx-get="@Url.Action("ListItemEditorPanel", "AppleTvList", new { workspaceId = Model.WorkspaceId(), interfaceId = Model.InterfaceId() })"
                hx-target="#editorPanel"
                type="button"
                onclick="toggleEditor()"
                class="bg-blueMid text-white font-semibold rounded px-4 py-2 cursor-pointer text-sm">
                Add New Item...
            </button>
        </div>

        <div id="list" class="mx-6 xl:mx-auto max-w-5xl">
            <div class="contentGroup formGroupAddBackground mb-8">
                <div class="flex gap-2 border-b border-b-zinc-300 py-2 px-4">
                    <p class="font-semibold flex-1">Title</p>
                    <p class="font-semibold w-8"></p>
                </div>
                @for (var i = 0; i < Model.Data.ListItems.Count; i++)
                {
                    var item = Model.Data.ListItems[i];
                    <div class="flex gap-2 border-b border-b-zinc-300 py-2 px-4">
                        <div class="flex-1">
                            <button
                                type="button"
                                hx-get="@Url.Action("ListItemEditorPanel", "AppleTvList", new { workspaceId = Model.WorkspaceId(), interfaceId = Model.InterfaceId(), itemIndex = i })"
                                hx-target="#editorPanel"
                                onclick="toggleEditor()"
                                class="hover:bg-zinc-200 text-zinc-700 font-semibold rounded px-4 py-2 cursor-pointer text-sm">
                                @(string.IsNullOrWhiteSpace(item.Title) ? $"Item {i + 1}" : item.Title)
                            </button>
                        </div>
                        <button
                            hx-delete="@Url.Action("DeleteListItem", "AppleTvList", new { workspaceId = Model.WorkspaceId(), interfaceId = Model.InterfaceId(), itemIndex = i })"
                            type="button"
                            hx-target="#workspaceEditor"
                            class="bg-rose-600 text-white font-semibold rounded px-4 py-1 cursor-pointer text-sm">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-4">
                                <path fill-rule="evenodd" d="M16.5 4.478v.227a48.816 48.816 0 0 1 3.878.512.75.75 0 1 1-.256 1.478l-.209-.035-1.005 13.07a3 3 0 0 1-2.991 2.77H8.084a3 3 0 0 1-2.991-2.77L4.087 6.66l-.209.035a.75.75 0 0 1-.256-1.478A48.567 48.567 0 0 1 7.5 4.705v-.227c0-1.564 1.213-2.9 2.816-2.951a52.662 52.662 0 0 1 3.369 0c1.603.051 2.815 1.387 2.815 2.951Zm-6.136-1.452a51.196 51.196 0 0 1 3.273 0C14.39 3.05 15 3.684 15 4.478v.113a49.488 49.488 0 0 0-6 0v-.113c0-.794.609-1.428 1.364-1.452Zm-.355 5.945a.75.75 0 1 0-1.5.058l.347 9a.75.75 0 1 0 1.499-.058l-.346-9Zm5.48.058a.75.75 0 1 0-1.498-.058l-.347 9a.75.75 0 0 0 1.5.058l.345-9Z" clip-rule="evenodd" />
                            </svg>
                        </button>
                    </div>
                }

                @if (Model.Data.ListItems.Count == 0)
                {
                    <div class="py-6 px-4 text-sm text-zinc-500">No list items yet. Add one to start building your list.</div>
                }
            </div>
        </div>
    </div>
</div>
