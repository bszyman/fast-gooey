@model FastGooey.Models.ViewModels.MacInterfaceSelectorViewModel
@{
    var deleteInterfaceBaseUrl = Url.Action(
        "DeleteInterface",
        "AppleTv",
        new { workspaceId = Model.WorkspaceId, interfaceId = Guid.Empty }
    )?.Replace($"/{Guid.Empty}", "");

    string InterfaceUrl(FastGooey.Models.ViewModels.NavigationBar.InterfaceNavigationItem item)
    {
        var interfaceId = item.Id.ToBase64Url();
        return item.Type switch
        {
            "Alert" => Url.Action("Index", "AppleTvAlert", new { workspaceId = Model.WorkspaceId, interfaceId }) ?? "#",
            "Catalog" => Url.Action("Index", "AppleTvCatalog", new { workspaceId = Model.WorkspaceId, interfaceId }) ?? "#",
            "Compilation" => Url.Action("Index", "AppleTvCompilation", new { workspaceId = Model.WorkspaceId, interfaceId }) ?? "#",
            "DescriptiveAlert" => Url.Action("Index", "AppleTvDescriptiveAlert", new { workspaceId = Model.WorkspaceId, interfaceId }) ?? "#",
            "Div" => Url.Action("Index", "AppleTvDiv", new { workspaceId = Model.WorkspaceId, interfaceId }) ?? "#",
            "Form" => Url.Action("Index", "AppleTvForm", new { workspaceId = Model.WorkspaceId, interfaceId }) ?? "#",
            "List" => Url.Action("Index", "AppleTvList", new { workspaceId = Model.WorkspaceId, interfaceId }) ?? "#",
            "MediaGrid" => Url.Action("Index", "AppleTvMediaGrid", new { workspaceId = Model.WorkspaceId, interfaceId }) ?? "#",
            "Loading" => Url.Action("Index", "AppleTvLoading", new { workspaceId = Model.WorkspaceId, interfaceId }) ?? "#",
            "Media" => Url.Action("Index", "AppleTvMedia", new { workspaceId = Model.WorkspaceId, interfaceId }) ?? "#",
            "Main" => Url.Action("Index", "AppleTvMain", new { workspaceId = Model.WorkspaceId, interfaceId }) ?? "#",
            "MenuBar" => Url.Action("Index", "AppleTvMenuBar", new { workspaceId = Model.WorkspaceId, interfaceId }) ?? "#",
            "OneUp" => Url.Action("Index", "AppleTvOneUp", new { workspaceId = Model.WorkspaceId, interfaceId }) ?? "#",
            "Parade" => Url.Action("Index", "AppleTvParade", new { workspaceId = Model.WorkspaceId, interfaceId }) ?? "#",
            "ProductBundle" => Url.Action("Index", "AppleTvProductBundle", new { workspaceId = Model.WorkspaceId, interfaceId }) ?? "#",
            "Product" => Url.Action("Index", "AppleTvProduct", new { workspaceId = Model.WorkspaceId, interfaceId }) ?? "#",
            "Rating" => Url.Action("Index", "AppleTvRating", new { workspaceId = Model.WorkspaceId, interfaceId }) ?? "#",
            "Search" => Url.Action("Index", "AppleTvSearch", new { workspaceId = Model.WorkspaceId, interfaceId }) ?? "#",
            "Showcase" => Url.Action("Index", "AppleTvShowcase", new { workspaceId = Model.WorkspaceId, interfaceId }) ?? "#",
            "Stack" => Url.Action("Index", "AppleTvStack", new { workspaceId = Model.WorkspaceId, interfaceId }) ?? "#",
            _ => "#"
        };
    }
}

<div class="absolute top-0 w-full my-2 text-blue-900">
    <span class="mx-3 uppercase text-sm font-semibold tracking-tight">Interfaces</span>
</div>

<div class="absolute top-10 bottom-8 overflow-y-scroll w-full">
    <ul id="interfaceList">
        @foreach (var workspaceInterface in Model.InterfaceItems)
        {
            <li hx-get="@InterfaceUrl(workspaceInterface)" 
                hx-boost="true" 
                hx-target="#workspace" 
                hx-push-url="false" 
                data-interface-id="@workspaceInterface.Id"
                class="py-2 text-blueDark font-medium overflow-ellipsis cursor-pointer" 
                onclick="changeInterfaceListSelection(this)">
                <p class="mx-4 inline-block">
                    @workspaceInterface.Name
                </p>
            </li>
        }
    </ul>
</div>

<div class="interfaceSelectorControlBar">
    <button 
        type="button"
        hx-get="@Url.Action("InterfaceCreatorPalette", "AppleTv", new { workspaceId = Model.WorkspaceId })"
        hx-target="#createInterfaceFloatingPalette"
        class="w-8 h-8 cursor-pointer text-center border-r border-r-blue-400/50" 
        onclick="toggleInterfaceCreatePalette()"
    >
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4 mx-auto">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
        </svg>
    </button>
    <button
        type="button"
        class="w-8 h-8 cursor-pointer text-center border-r border-r-blue-400/50"
        onclick="deleteSelectedInterface('@deleteInterfaceBaseUrl')"
    >
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4 mx-auto">
            <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
        </svg>
    </button>
</div>
