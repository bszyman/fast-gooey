@using FastGooey.Models.ViewModels
@model FastGooey.Features.Interfaces.AppleTv.MediaGrid.Models.MediaGridItemPanelViewModel

<div class="bg-white flex w-full h-20 border-b border-b-zinc-300">
    <div class="flex-1 flex items-center">
        <p class="mx-6 font-bold">Edit Media Grid Item</p>
    </div>
</div>

<form method="post"
      hx-post="@Url.Action("SaveMediaGridItemPanel", "AppleTvMediaGrid", new { workspaceId = Model.WorkspaceId, interfaceId = Model.InterfaceId.ToBase64Url(), itemId = string.IsNullOrWhiteSpace(Model.ItemId) ? null : Model.ItemId })"
      hx-target="#editorPanel">
    @Html.AntiForgeryToken()

    <div class="py-4 px-4">
        <div class="formGroup formGroupAddBackground mb-4">
            <div class="w-full border-b border-b-zinc-300 py-2 px-4">
                <p class="font-semibold text-sm">Media Grid Item</p>
            </div>
            <div class="py-2 px-4">
                <div class="mb-3">
                    <label for="title">Title</label>
                    <input type="text" id="title" name="Title" value="@Model.Title" />
                    @Html.ValidationMessage("Title", "", new { @class = "text-red-600 text-sm mt-1 block" })
                </div>
                <div class="mb-3">
                    <label for="linkToButton">Link (optional)</label>
                    <input type="hidden" id="LinkTo" name="LinkTo" value="@Model.LinkTo" />
                    <button type="button"
                            id="linkToButton"
                            class="linkEditorTriggerButton"
                            onclick="openLinkEditor(this)"
                            data-link-editor-trigger="true"
                            data-link-editor-target="LinkTo"
                            data-link-editor-display="linkToDisplay">
                        Select link...
                    </button>
                    <p id="linkToDisplay" class="truncate text-xs text-gray-500 ml-1 mt-1">
                        @(string.IsNullOrWhiteSpace(Model.LinkTo) ? "No link selected." : Model.LinkTo)
                    </p>
                </div>
                <div class="mb-3">
                    <label for="previewMediaButton">Preview Media</label>
                    <input type="hidden" id="PreviewMedia" name="PreviewMedia" value="@Model.PreviewMedia" />
                    <button type="button"
                            id="previewMediaButton"
                            class="linkEditorTriggerButton"
                            onclick="openMediaPicker(this)"
                            data-media-picker-trigger="true"
                            data-media-picker-target="PreviewMedia"
                            data-media-picker-display="previewMediaDisplay">
                        Select media...
                    </button>
                    <p id="previewMediaDisplay" class="truncate text-xs text-gray-500 ml-1 mt-1">No media selected.</p>
                    @Html.ValidationMessage("PreviewMedia", "", new { @class = "text-red-600 text-sm mt-1 block" })
                </div>
            </div>
        </div>
    </div>

    <div class="absolute bottom-0 bg-white w-full h-16 border-t border-t-zinc-300 flex justify-end items-center px-6 gap-2">
        @await Html.PartialAsync("~/Views/Partials/CancelButton.cshtml")
        @await Html.PartialAsync("~/Views/Partials/SubmitButton.cshtml")
    </div>
</form>
