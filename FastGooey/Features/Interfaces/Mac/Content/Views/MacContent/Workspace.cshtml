@using FastGooey.Features.Interfaces.Mac.Shared.Models.JsonDataModels.Mac
@model FastGooey.Features.Interfaces.Mac.Shared.Models.ViewModels.Mac.MacContentWorkspaceViewModel

<form method="post"
      hx-post="@Url.Action("SaveWorkspace", "MacContent", new { workspaceId = Model.WorkspaceId(), interfaceId = Model.InterfaceId() })"
      hx-trigger="blur from:#headerTitle, keyup[key=='Enter'] changed delay:500ms from:#headerTitle, blur from:#headerBackgroundImage, keyup[key=='Enter'] changed delay:500ms from:#headerBackgroundImage"
      hx-target="#workspaceEditor"
      onsubmit="return false;">
    @Html.AntiForgeryToken()
    <div id="editor" class="mx-auto max-w-3xl mt-8">
        <div class="formGroup formGroupAddBackground mb-8">
            <div class="w-full border-b border-b-zinc-300 py-2 px-4">
                <p class="font-semibold">Header</p>
            </div>
            <div class="py-4 px-4">
                <div class="mb-4">
                    <label for="headerTitle">Title</label>
                    <div class="flex gap-2">
                        <input 
                            type="text" 
                            id="headerTitle" 
                            name="headerTitle" 
                            value="@Model.Data.HeaderTitle"
                        />
                    </div>
                </div>
                <div>
                    <label for="headerBackgroundImage">Background Image</label>
                    <div class="flex gap-2">
                        <input 
                            type="url" 
                            id="headerBackgroundImage" 
                            name="headerBackgroundImage" 
                            placeholder="https://example.com/image.jpg"
                            value="@Model.Data.HeaderBackgroundImage"
                        />
                    </div>
                </div>
            </div>
        </div>
        <div class="formGroup formGroupAddBackground mb-8">
            <div class="w-full border-b border-b-zinc-300 py-2 px-4">
                <p class="font-semibold">Page Content</p>
            </div>
            <div class="py-4 px-4">
                <div
                    id="contentItems"
                    data-content-order-container="true"
                    hx-post="@Url.Action("ReorderItems", "MacContent", new { workspaceId = Model.WorkspaceId(), interfaceId = Model.InterfaceId() })"
                    hx-trigger="contentReordered"
                    hx-target="#workspaceEditor">
                    @foreach (var item in Model.Data.Items)
                    {
                        if (item.ContentType.Equals("headline"))
                        {
                            var headline = (HeadlineContentItem)item;
                            <div
                                draggable="true"
                                data-content-item-id="@item.Identifier"
                                onclick="toggleEditor()"
                                hx-get="@Url.Action("HeadlineConfigurationPanel", "MacContent", new { workspaceId = Model.WorkspaceId(), interfaceId = Model.InterfaceId(), itemId = item.Identifier })"
                                hx-target="#editorPanel"
                                class="rounded hover:bg-zinc-100 p-1 cursor-pointer cursor-grab">
                                <p class="text-lg font-bold">@headline.Headline</p>
                            </div>
                        }

                        if (item.ContentType.Equals("text"))
                        {
                            var text = (TextContentItem)item;
                            <div
                                draggable="true"
                                data-content-item-id="@item.Identifier"
                                onclick="toggleEditor()"
                                hx-get="@Url.Action("TextConfigurationPanel", "MacContent", new { workspaceId = Model.WorkspaceId(), interfaceId = Model.InterfaceId(), itemId = item.Identifier })"
                                hx-target="#editorPanel"
                                class="rounded hover:bg-zinc-100 p-1 cursor-pointer cursor-grab">
                                <p class="text-md">@text.Text</p>
                            </div>
                        }

                        if (item.ContentType.Equals("link"))
                        {
                            var link = (LinkContentItem)item;
                            <div
                                draggable="true"
                                data-content-item-id="@item.Identifier"
                                onclick="toggleEditor()"
                                hx-get="@Url.Action("LinkConfigurationPanel", "MacContent", new { workspaceId = Model.WorkspaceId(), interfaceId = Model.InterfaceId(), itemId = link.Identifier })"
                                hx-target="#editorPanel"
                                class="my-3 rounded-xl hover:bg-zinc-100 px-1 py-3 cursor-pointer cursor-grab text-center border border-zinc-300">
                                <a href="@link.Url" target="_blank" rel="noopener" onclick="event.stopPropagation()" class="text-md text-blueMid font-bold">
                                    @link.Title
                                </a>
                            </div>
                        }

                        if (item.ContentType.Equals("image"))
                        {
                            var image = (ImageContentItem)item;
                            <div
                                draggable="true"
                                data-content-item-id="@item.Identifier"
                                onclick="toggleEditor()"
                                hx-get="@Url.Action("ImageConfigurationPanel", "MacContent", new { workspaceId = Model.WorkspaceId(), interfaceId = Model.InterfaceId(), itemId = image.Identifier })"
                                hx-target="#editorPanel"
                                class="rounded-xl hover:bg-zinc-100 px-1 py-3 cursor-pointer cursor-grab text-center">
                                <img src="@MediaUrlResolver.Resolve(Url, Model.WorkspaceId(), image.Url)" alt="@image.Caption" class="w-full">
                                <p class="mt-2 px-2 text-sm font-medium text-left">@image.Caption</p>
                            </div>
                        }
                    }
                    <div class="hidden" data-content-order-inputs="true">
                        @foreach (var item in Model.Data.Items)
                        {
                            <input type="hidden" name="orderedItemIds" value="@item.Identifier" />
                        }
                    </div>
                </div>
                <button
                    type="button"
                    onclick="toggleEditor()"
                    hx-get="@Url.Action("ContentTypeSelectorPanel", "MacContent", new { workspaceId = Model.WorkspaceId(), interfaceId = Model.InterfaceId() })"
                    hx-target="#editorPanel"
                    class="w-full rounded bg-zinc-100 text-zinc-700 font-semibold px-6 py-3 mt-4 cursor-pointer">
                    Add Content
                </button>
            </div>
        </div>
    </div>
</form>
