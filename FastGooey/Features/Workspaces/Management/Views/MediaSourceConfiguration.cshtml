<div class="h-full flex flex-col">
    <div class="bg-white flex h-20 border-b border-b-zinc-300 rounded-tr-l flex-shrink-0">
        <div class="flex-1 flex items-center">
            <p class="p-2 mx-6 w-full font-bold">Media Source Configuration</p>
        </div>
    </div>

    <div id="workspaceEditor" 
         class="flex-1 min-h-0 overflow-y-auto overflow-x-hidden"> 
        <div class="mx-auto max-w-3xl mt-8">
            <div class="formGroup formGroupAddBackground mb-8">
                <div class="w-full border-b border-b-zinc-300 py-2 px-4">
                    <p class="font-semibold">Media Storage</p>
                </div>
                <div class="py-4 px-4">
                    <div class="flex items-center justify-between mb-3">
                        <p class="text-sm font-semibold text-zinc-700">Sources</p>
                    </div>
                    <div class="space-y-3">
                        @foreach (var source in Model.MediaSources)
                        {
                            <div class="p-2 border border-zinc-200 rounded bg-white">
                                <a 
                                    hx-get="@Url.Action("MediaSourceEditorPanel", "WorkspaceManagement", new { workspaceId = Model.Workspace.PublicId, sourceId = source.SourceId })" 
                                    hx-target="#editorPanel" 
                                    onclick="toggleEditor()" 
                                    class="mb-1 font-medium hover:underline cursor-pointer">
                                    @source.Name
                                </a>
                                <p class="text-sm text-zinc-500">@source.DetailLine</p>
                            </div>
                        }
                        
                        <button
                            type="button"
                            hx-get="@Url.Action("MediaSourceEditorPanel", "WorkspaceManagement", new { workspaceId = Model.Workspace.PublicId })"
                            hx-target="#editorPanel"
                            onclick="toggleEditor()"
                            class="p-2 bg-blueLight border border-blueMid border-dashed 
                                rounded text-center text-blueDark font-medium w-full cursor-pointer">
                            Add New Media Source
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
